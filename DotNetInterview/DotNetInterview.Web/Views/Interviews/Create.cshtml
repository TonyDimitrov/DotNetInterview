@model DotNetInterview.Web.ViewModels.CreateInterviewVM

@{
    ViewData["Title"] = "Create Interview";
} 

<h2>Create Interview</h2>

<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <hr />
        <form asp-action="Create" asp-controller="Interviews" method="post" enctype="multipart/form-data" id="forminterview">

            <div class="form-group">
                <label asp-for="Seniority" class="control-label"></label>
                <input asp-for="Seniority" class="form-control" />
                <span asp-validation-for="Seniority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PositionTitle" class="control-label"></label>
                <input asp-for="PositionTitle" class="form-control" placeholder="*" />
                <span asp-validation-for="PositionTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyNationality" class="control-label"></label>
                <input asp-for="CompanyNationality" class="form-control" placeholder="*" />
                <span asp-validation-for="CompanyNationality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InterviewLocation" class="control-label"></label>
                <input asp-for="InterviewLocation" class="form-control" />
                <span asp-validation-for="InterviewLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfEmployes" class="control-label"></label>
                <input asp-for="NumberOfEmployes" class="form-control" placeholder="*" />
                <span asp-validation-for="NumberOfEmployes" class="text-danger"></span>
            </div>
            <div class="form-group"> 
                <label asp-for="File" class="control-label"></label>
                <input asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>

            <div class="form-group" id="addfield">
                <div class="form-group">
                    <label type="text" class="control-label">New Question</label>
                      <textarea name="Questions[0].Content" class="form-control" placeholder="*" id="forminterview"></textarea>
                </div>
            </div>
            <button type="reset" class="btn btn-info" id="addbutton">Add Question</button>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
            <div class="form-group hide">
                <input type="text" value="Create" class="btn btn-default hide" />
            </div>
        </form>



    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}